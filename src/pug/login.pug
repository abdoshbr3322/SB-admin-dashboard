include ./includes/mixins
block vars
doctype
html
  head
    block head
      meta(charset='UTF-8')
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      block styles
        //- include bootstrap
        link(
          rel="stylesheet",
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
        )

        //- include google fonts
        link(
          rel="stylesheet",
          href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        )
        
        //- include my styles (login.css)
        link(rel='stylesheet', href='../css/login.css')

        //- include fontawesome
        link(rel="stylesheet", href='../css/all.min.css')

  title
    block pageTitle
      | Untitled
  body
    block body
      .wrapper.py-4.px-1.px-md-4.min-vh-100.bg-gradient-primary
        .container
          .row.bg-white.rounded.m-0
            .col-6.d-none.d-lg-block.p-0
              img.img-fluid.rounded(src=img, alt='A dog')
            .col.col-lg-6.py-5.px-4.px-sm-5
              block pageContent

